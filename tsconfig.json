{
  "ts-node": {
    "transpileOnly": true,
    "files": true
  },
  "compilerOptions": {
    "esModuleInterop": true,
    "lib": [
      "es6"
    ],
    "target": "es6",
    "module": "commonjs",
    "rootDir": "./src/",
    "outDir": "./bot/",
    "strict": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "removeComments": true,
    "typeRoots": [
      "node_modules/@types",
      "src/Types"
    ],
    "sourceMap": false,
    "baseUrl": "./"
  },
  "files": [
    "src/Bot.ts"
  ],
  "include": [
    "./**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
}